<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.arariko.studycase1.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dengan Milea"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textAlignment="center"

        />

    <EditText
        android:id="@+id/namaMakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:hint="Masukan Nama Menu"
        />

    <EditText
        android:id="@+id/porsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/colorAccent"

        android:hint="Masukan Jumlah"
        android:textColorHighlight="@color/colorAccent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btnEatbus"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="EATBUS"
            android:textColor="@android:color/background_light"
            android:onClick="makanatbus"
            />

        <Button
            android:id="@+id/btnAbnormal"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:onClick="makanabnormal"
            android:background="@color/colorAccent"
            android:text="ABNORMAL"
            android:textColor="@android:color/background_light" />

    </LinearLayout>

    <TextView
        android:id="@+id/restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        android:visibility="invisible" />

</LinearLayout>
